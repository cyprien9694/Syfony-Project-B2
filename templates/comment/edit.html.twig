{% extends 'base.html.twig' %}

{% block title %}Modifier le commentaire{% endblock %}

{% block body %}
<main>
    <h1 class="mb-3">Modifier le commentaire</h1>

    <div class="comment-form">
        {{ form_start(form, { 'attr': {'enctype': 'multipart/form-data'} }) }}
        <div class="form-group mb-2">
            {{ form_widget(form.content) }}
        </div>
        {% if form.image is defined %}
            <div class="form-group mb-2">{{ form_widget(form.image) }}</div>
        {% endif %}
        <button class="btn" type="submit">Modifier</button>
        {{ form_end(form) }}
    </div>

    <a href="{{ path('app_comment') }}" class="btn btn-secondary mt-3">Retour Ã  la liste</a>
</main>
{% endblock %}
