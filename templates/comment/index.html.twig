<main>
    {% if app_user %}
        <a class="btn mb-4" href="{{ path('comment_new') }}">ğŸ’¬ Ajouter un commentaire</a>
    {% endif %}

    {% if comments is not empty %}
        {% for comment in comments %}
            <div class="comment">
                <div class="comment-author">
                    {{ comment.author }} â€” {{ comment.createdAt|date('d/m/Y H:i') }}
                </div>

                <div class="comment-category">
                    {% if comment.category == 'star' %}â­ Ã‰toile
                    {% elseif comment.category == 'constellation' %}âœ¨ Constellation
