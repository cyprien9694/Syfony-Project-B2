{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
	<div class="container-fluid">
		<a class="navbar-brand fw-bold" href="{{ path('app_home') }}">‚ÑπÔ∏è Page de Contact</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarMain">
			<ul class="navbar-nav ms-auto">
				<li class="nav-item">
					<a class="nav-link" href="{{ path('app_home') }}">üè† Accueil</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('app_star') }}">‚≠ê √âtoiles</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('app_star_day') }}">üåü √âtoile du jour</a>
				</li>
				<li class="nav-item">
					<a class="nav-link active" href="{{ path('app_contact') }}">‚ÑπÔ∏è Contact</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('app_login') }}">üí¨ Commentaires</a>
				</li>
			</ul>
		</div>
	</div>
</nav>

<section class="container mt-5 pt-5">
	<h1 class="mb-4 text-center">Contactez-nous</h1>

	{# Affiche les messages flash s'il y en a #}
	{% for type, messages in app.flashes %}
	{% for message in messages %}
	<div class="alert alert-{{ type }} alert-dismissible fade show">
		{{ message }}
		<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
	</div>
	{% endfor %}
	{% endfor %}

	{# Formulaire Symfony #}
	{% for label, messages in app.flashes %}
	{% for message in messages %}
	<div class="alert alert-{{ label }}">
		<i class="fas fa-{{ label == 'success' ? 'check-circle' : 'exclamation-triangle' }}"></i>
		{{ message }}
	</div>
	{% endfor %}
	{% endfor %}
	{{ form_start(contactForm, {'attr': {'id': 'contact-form'}}) }}

	<div class="form-group">
		{{ form_label(contactForm.name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(contactForm.name, {
		'attr': {
		'class': 'form-control',
		'placeholder': 'Votre nom',
		'autocomplete': 'name'
		}
		}) }}
		{{ form_errors(contactForm.name) }}
	</div>

	<div class="form-group">
		{{ form_label(contactForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(contactForm.email, {
		'attr': {
		'class': 'form-control',
		'placeholder': 'votre@email.com',
		'autocomplete': 'email'
		}
		}) }}
		{{ form_errors(contactForm.email) }}
	</div>

	<div class="form-group">
		{{ form_label(contactForm.message, 'Message', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(contactForm.message, {
		'attr': {
		'class': 'form-control',
		'placeholder': 'Votre message',
		'rows': 5
		}
		}) }}
		{{ form_errors(contactForm.message) }}
	</div>

	<button type="submit" class="btn btn-primary mt-3">
		<i class="fas fa-paper-plane"></i> Envoyer
	</button>
	
	{{ form_end(contactForm) }}
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}