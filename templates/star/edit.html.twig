{% extends 'base.html.twig' %}

{% block title %}Modifier l'étoile{% endblock %}
{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>
	<link rel="stylesheet" href="{{ asset('css/star_edit.css') }}">
{% endblock %}
{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow-lg star-edit-card">
                <div class="card-body">

                    <h1 class="text-center mb-4">
                        <i class="fa-solid fa-star text-warning"></i>
                        Modifier l'étoile
                    </h1>
                    
                    {{ form_start(form) }}
                        {{ form_widget(form) }}

                        <button class="btn btn-success w-100 mt-3">
                            <i class="fa-solid fa-check"></i> Mettre à jour
                        </button>
                    {{ form_end(form) }}

                    <a href="{{ path('app_star') }}" class="btn btn-outline-secondary w-100 mt-3">
                        <i class="fa-solid fa-arrow-left"></i> Retour à la liste
                    </a>

                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
