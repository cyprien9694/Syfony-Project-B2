{# templates/star/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouvelle étoile{% endblock %}

{% block stylesheets %}
<style>
/* RESET */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* SECTION */
#star-form {
    position: relative;
    min-height: 100vh;
    background: radial-gradient(ellipse at bottom, #0d1b2a 0%, #020617 100%);
    color: #ffffff;
    overflow: hidden;
    padding-top: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* TITRE */
#star-form h1 {
    font-size: 2.8rem;
    margin-bottom: 30px;
    text-align: center;
    text-shadow: 0 0 15px rgba(255,255,255,0.6);
}

/* CARTE FORMULAIRE */
.star-form-card {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(12px);
    border-radius: 20px;
    padding: 40px;
    width: 100%;
    max-width: 520px;
    box-shadow: 0 0 40px rgba(255, 215, 0, 0.25);
    border: 1px solid rgba(255,255,255,0.15);
    animation: float 6s ease-in-out infinite;
}

/* FORM */
.star-form-card .form-row {
    margin-bottom: 18px;
}

.star-form-card input,
.star-form-card textarea,
.star-form-card select {
    width: 100%;
    padding: 12px 14px;
    border-radius: 10px;
    border: 1px solid rgba(255,255,255,0.2);
    background: rgba(0,0,0,0.4);
    color: #fff;
    font-size: 15px;
}

.star-form-card input::placeholder,
.star-form-card textarea::placeholder {
    color: rgba(255,255,255,0.6);
}

/* BOUTON */
.star-form-card button {
    width: 100%;
    background: linear-gradient(135deg, #ffd700, #ffb700);
    color: #000;
    border: none;
    padding: 14px;
    border-radius: 12px;
    cursor: pointer;
    font-size: 16px;
    font-weight: bold;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 0 20px rgba(255,215,0,0.4);
}

.star-form-card button:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 30px rgba(255,215,0,0.7);
}

/* LIEN */
.star-form-card a {
    display: block;
    margin-top: 20px;
    text-align: center;
    color: gold;
    text-decoration: none;
    opacity: 0.85;
}

.star-form-card a:hover {
    opacity: 1;
    text-decoration: underline;
}

/* FLASH */
.flash-success,
.flash-error {
    margin-bottom: 20px;
    padding: 12px;
    border-radius: 10px;
    text-align: center;
}

.flash-success {
    background: rgba(40,167,69,0.2);
    border: 1px solid rgba(40,167,69,0.5);
}

.flash-error {
    background: rgba(220,53,69,0.2);
    border: 1px solid rgba(220,53,69,0.5);
}

/* ANIMATION */
@keyframes float {
    0% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0); }
}

/* ÉTOILES */
.stars {
    position: absolute;
    inset: 0;
    z-index: 0;
}

.stars::before,
.stars::after {
    content: "";
    position: absolute;
    width: 200%;
    height: 200%;
    background-image:
        radial-gradient(2px 2px at 20% 30%, white, transparent),
        radial-gradient(1.5px 1.5px at 80% 40%, white, transparent),
        radial-gradient(1px 1px at 60% 70%, white, transparent),
        radial-gradient(2px 2px at 30% 80%, white, transparent),
        radial-gradient(1px 1px at 90% 90%, white, transparent);
    animation: starsMove 120s linear infinite;
}

.stars::after {
    animation-duration: 200s;
    opacity: 0.5;
}

@keyframes starsMove {
    from { transform: translateY(0); }
    to { transform: translateY(-50%); }
}

/* CONTENU AU-DESSUS */
#star-form .content {
    position: relative;
    z-index: 1;
}

/* RESPONSIVE */
@media (max-width: 768px) {
    #star-form h1 {
        font-size: 2.2rem;
    }

    .star-form-card {
        padding: 25px;
    }
}
</style>
{% endblock %}

{% block body %}
<section id="star-form">
    <div class="stars"></div>

    <div class="content">
        <h1>Ajouter une nouvelle étoile ✨</h1>

        <div class="star-form-card">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button>Ajouter l’étoile</button>
            {{ form_end(form) }}

            <a href="{{ path('app_star') }}">← Retour à la constellation</a>
        </div>
    </div>
</section>
{% endblock %}
