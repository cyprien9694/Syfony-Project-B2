{# templates/star/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouvelle étoile{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
<link rel="stylesheet" href="{{ asset('css/star_new.css') }}">
{% endblock %}

{% block body %}
<section id="star-form">
    <div class="stars"></div>

    <div class="content">
        <h1>Ajouter une nouvelle étoile ✨</h1>

        <div class="star-form-card">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button>Ajouter l’étoile</button>
            {{ form_end(form) }}

            <a href="{{ path('app_star') }}">← Retour à la constellation</a>
        </div>
    </div>
</section>
{% endblock %}